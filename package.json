{
  "name": "speednote",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "rm -rf .next .swc .vercel coverage node_modules tsconfig.tsbuildinfo playwright-report test-results",
    "test": "jest --watchAll --verbose",
    "format-check": "prettier --check ./**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "test-ci": "jest --ci --verbose --coverage",
    "quality-check": "yarn format-check && yarn lint && yarn type-check",
    "e2e": "playwright test",
    "e2e-prod": "next build && PRODUCTION_READY=1 yarn e2e --ui",
    "e2e-ci": "next build && PRODUCTION_READY=1 yarn e2e"
  },
  "dependencies": {
    "@playwright/test": "^1.34.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "20.2.1",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lodash.debounce": "^4.0.8",
    "next": "13.4.3",
    "next-pwa": "^5.6.0",
    "next-router-mock": "^0.9.3",
    "prettier": "^2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-textarea-autosize": "8.4.0",
    "sass": "^1.62.1",
    "typescript": "5.0.4",
    "zod": "^3.21.4"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}

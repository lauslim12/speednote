{
  "name": "speednote",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "clean": "rm -rf .next .swc .vercel coverage node_modules tsconfig.tsbuildinfo playwright-report test-results",
    "test": "jest --watchAll --verbose",
    "format-check": "prettier --check ./**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "test-ci": "jest --ci --verbose --coverage",
    "quality-check": "yarn format-check && yarn lint && yarn type-check",
    "e2e": "playwright test",
    "e2e-prod": "next build && PRODUCTION_READY=1 yarn e2e --ui",
    "e2e-ci": "next build && PRODUCTION_READY=1 yarn e2e"
  },
  "dependencies": {
    "@playwright/test": "^1.43.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "20.12.7",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lodash.debounce": "^4.0.8",
    "next": "13.4.3",
    "next-pwa": "^5.6.0",
    "next-router-mock": "^0.9.13",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.75.0",
    "typescript": "5.4.5",
    "zod": "^3.22.5",
    "zustand": "^4.5.2"
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
